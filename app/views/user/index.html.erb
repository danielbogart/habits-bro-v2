<div class="row text-center">
	<h1>User Home Page</h1>
</div>
<div class="row col-md-4">
	<h2 class="text-center">Dailies</h2>
	<% @dailies.order('created_at ASC').each do |p| %>
		<p><%= p.name %>
		<%= link_to "Did it", "dailies/augment_streak/"+p.id.to_s, :class => "btn btn-sm btn-primary pull-right" %>
		</p>
		<br>	
		<%= link_to "DESTROY", "dailies/"+p.id.to_s, :method => :DELETE, :class => "btn btn-sm btn-danger pull-right" %>			
		<p>Streak:
		<% p.streak.times do %>
			x
		<% end %>	
		</p>
		<br>
	<% end %>

	<%= render "/shared/create_new_daily" %>
</div>
<div class="row col-md-4">
	<h2 class="text-center">Goals</h2>
</div>
<div class="row col-md-4">
	<h2 class="text-center">Wants</h2>
</div>


