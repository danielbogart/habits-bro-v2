<div class="text-center">
	<%= simple_form_for @goal do |f| %>
	<%= f.error_notification %>
	<div class="input-group input-append">
		<%= f.input :name, :maxlength => 30, :input_html => { :class => "form-control" }, :label => false, :placeholder => "Enter new goal"  %>
		<span class="input-group-btn">
			<%= f.button :submit, :class => "btn btn-md btn-primary", :value => "+" %>
		</span>
	</div>		
		<%= f.input :target_date, :maxlength => 50, :label => false %>
		<%= f.hidden_field :user_id, :value => current_user.id, :maxlength => 30 %>
		<br>
</div>
	<% end %>
