<%= simple_form_for @daily do |f| %>
<%= f.error_notification %>

<div class="input-group input-append">
	<%= f.input :name, :maxlength => 50, :input_html => { :class => "form-control" }, :label => false, :placeholder => "Enter new daily habit" %>
	<%= f.hidden_field :user_id, :value => current_user.id, :maxlength => 50 %>
	<span class="input-group-btn">
		<%= f.button :submit, :class => "btn btn-md btn-primary", :value => "+" %>
	</span>
</div>
<br>

<% end %>
